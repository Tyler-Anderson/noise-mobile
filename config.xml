<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.noise-thing" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Noise Thing</name>
    <description>
        Minimalistic white/pink/brown noise generator
    </description>
    <author email="tyler@brava.do" href="http://brava.do">
         Tyler Anderson
    </author>
    <content src="index.html" />
    <icon src="./res/launcher.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="SplashScreen" value="./res/splashscreen.png" />
    <preference name="SplashScreenDelay" value="500" />
    <preference name="SplashMaintainAspectRatio" value="true" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <splash src="res/screen/ios/screen-iphone-portrait.png"         width="320" height="480" />
        <splash src="res/screen/ios/screen-iphone-portrait-2x.png"      width="640" height="960" />
        <splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" />
        <splash src="res/screen/ios/screen-ipad-portrait.png"           width="768" height="1024" />
        <splash src="res/screen/ios/screen-iphone6-portrait.png"        width="750" height="1334" />
        <splash src="res/screen/ios/screen-iphone6plus-portrait.png"    width="1242" height="2208" />

        <preference name="Suppresses3DTouchGesture" value="true" />
        <preference name="SuppressesIncrementalRendering" value="true"/>
        <preference name="SuppressesLongPressGesture" value="true" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="deployment-target" value="7.0" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="xwalkVersion" value="15+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
</widget>
